{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "defaultMode": "bypassPermissions",
    "additionalDirectories": [
      "~/.dotfiles/claude-code/.claude/"
    ]
  },
  "model": "haiku",
  "enableAllProjectMcpServers": true,
  "hooks": {
    "WorktreeCreate": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.dotfiles/claude-code/.claude/hooks/worktree_create.sh",
            "timeout": 120,
            "statusMessage": "Installing worktree dependencies..."
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.dotfiles/claude-code/.claude/statusline.sh",
    "padding": 0
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowedDomains": [
        "github.com",
        "*.npmjs.org"
      ]
    },
    "excludedCommands": [
      "docker"
    ]
  },
  "alwaysThinkingEnabled": true,
  "skipDangerousModePermissionPrompt": true
}
